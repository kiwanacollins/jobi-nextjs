
#.env.docker.example
# Clerk Authentication Configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/chooseProfile

# Clerk Webhook Secret - Update with your actual webhook secret
NEXT_CLERK_WEBHOOK_SECRET=your_webhook_secret_here

# TinyMCE Editor API Key - Update with your actual API key
NEXT_PUBLIC_TINY_EDITOR_API_KEY=your_tinymce_api_key_here

# Server URL for Docker environment
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# MongoDB Configuration for Docker
# This will be overridden by docker-compose environment variables
MONGODB_URL=mongodb://admin:password@mongodb:27017/jobiNextjs?authSource=admin
MONGODB_DB_NAME=jobiNextjs

# Suppress hydration warnings from browser extensions
NEXT_PUBLIC_SUPPRESS_HYDRATION_WARNINGS=true

# Admin emails - comma separated list
ADMIN_EMAILS=your_admin_email@example.com

# Clerk Keys - Update with your actual Clerk keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# Cloudinary Configuration - Update with your actual Cloudinary credentials
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
